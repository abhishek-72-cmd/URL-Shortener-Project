<!DOCTYPE html>
<html lang="en">
  <head>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
  </head>
  <body>
    <div class="container">
      <h1>URL Shortener</h1>

      <form action="/shortUrl" method="post" class="mb-3">
        <div class="d-flex align-items-center">
          <input type="text" name="fullUrl" placeholder="Enter URL" class="form-control" style="width: 60%; margin-right: 10px;" />
          <button type="submit" class="btn btn-primary">Shrink</button>
        </div>
      </form>

      <table class="table table-striped">
        <thead>
          <tr>
            <th>Full URL</th>
            <th>Short URL</th>
            <th>Clicks</th>
            <th>Delete</th>
          </tr>
        </thead>
        <tbody>
          <% shortUrls.forEach(shortUrl => { %>
            <tr>
              <td><a href="<%= shortUrl.full %>"><%= shortUrl.full %></a></td>
              <td><a href="<%= baseURL %>/<%= shortUrl.short %>"><%= baseURL %>/<%= shortUrl.short %></a></td>

              <td><%= shortUrl.clicks %></td>
              <td>
                <form action="/deleteUrl/<%= shortUrl._id %>" method="POST" style="display:inline;">
                  <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                </form>          
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </body>
</html>
